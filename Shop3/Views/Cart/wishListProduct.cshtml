
@{
    ViewData["Title"] = "NonameShop Cart";
    ViewData["MetaDescription"] = "NonameShop Cart";
    ViewData["MetaKeyword"] = "NonameShop Cart";
}


@section Scripts{
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.js"></script>
    <script src="~/client-app/controllers/cart/wishList.js" asp-append-version="true"></script>
    <script>
        var wishProduct = new wishProductController();
        wishProduct.initialize();
    </script>

}
<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>My Account</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<section class="main-container col2-right-layout" id="mywishlist">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-9 col-xs-12">
                <div class="my-account">
                    <div class="page-title">
                        <h2>My Wishlist</h2>
                    </div>
                    <div class="wishlist-item table-responsive">
                        <table class="col-md-12">
                            <thead>
                                <tr>
                                    <th class="th-delate">Remove</th>
                                    <th class="th-product">Images</th>
                                    <th class="th-details">Product Name</th>
                                    <th class="th-price">Unit Price</th>
                                    <th class="th-total th-add-to-cart">Add to Cart </th>
                                </tr>
                            </thead>

                            <tbody id="table-wishlist"> </tbody>
                        </table>

                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddlShowPage">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    bản ghi/trang.
                                </span>
                                Tổng số : <strong id="lblTotalRecords"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>

                        <a href="javascript:void(0);" class="all-cart">Add all to cart</a>
                    </div>
                </div>
            </div>

            <partial name="_MyAccoutAndWishListView.cshtml" />

        </div>
    </div>
</section>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td class="th-delate"><a href="javascript:void(0);" id="removeWishProduct" data-id="{{Id}}">X</a></td>
        <td class="th-product"><a href="{{Link}}">{{{Image}}}</a></td>
        <td class="th-details"><h2><a href="{{Link}}">{{Name}}</a></h2></td>
        <td class="th-price">{{Price}}</td>
        <th class="td-add-to-cart" id="add-to-cart" data-id="{{Id}}"><a href="javascript:void(0);"> Add to Cart</a></th>
    </tr>


</script>


