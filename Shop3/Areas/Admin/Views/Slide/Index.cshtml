
@section Scripts{
    <script src="~/app/controllers/contact/index.js"></script>
    <script src="~/app/controllers/slide/index.js" asp-append-version="true"></script>
    <script>
        var slide = new SlideController();
        slide.initialize();
    </script>

}
<div class="clearfix"></div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Slide</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                   
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">

            <button id="btnCreate" class="btn btn-success">Create</button>

            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">

                            <th class="column-title">Alias</th>
                            <th class="column-title">TotalSlide </th>
                            <th class="column-title">Action</th>

                        </tr>
                    </thead>

                    <tbody id="SlideTable"></tbody>

                </table>
                <!--Pagination-->

                <div class="col-sm-5">
                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                        <select id="ddlShowPage">
                            <option value="10" selected="selected">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                        <span class="item-per-page">
                            bản ghi/trang.
                        </span>
                        Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                    </div>
                </div><div class="col-sm-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                        <ul id="paginationUL"></ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="clearfix"></div>

<script id="table-template" type="x-tmpl-mustache">
    <tr class="even pointer">

        <td class=" ">{{GroupAlias}}</td>
        <td class=" ">{{{TotalSlide}}}</td>
        <th scope="row">
            @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
            {
                <a class="btn  btn-sm btn-edit" data-id="{{GroupAlias}}"><i class="fa fa-pencil"></i></a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Delete)).Succeeded)
            {
                <a class="btn  btn-sm btn-delete" data-id="{{GroupAlias}}"><i class="fa fa-trash"></i></a>

            }
        </th>
    </tr>
</script>
@await Html.PartialAsync("_ListSlide.cshtml")
@await Html.PartialAsync("_AddEditSlideModalByAlias.cshtml")


